{
  "name": "toaster",
  "version": "1.0.0",
  "description": "Toaster - React + NestJS Application",
  "private": true,
  "scripts": {
    "install:all": "bun install && cd client && bun install && cd ../server && bun install",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:client": "cd client && bun run dev",
    "dev:server": "cd server && bun run start:dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "cd client && bun run build",
    "build:server": "cd server && bun run build",
    "start": "cd server && bun run start:prod",
    "lint": "bun run lint:client && bun run lint:server",
    "lint:client": "cd client && bun run lint",
    "lint:server": "cd server && bun run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
